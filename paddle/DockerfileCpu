# Imagen base liviana con soporte CUDA (solo runtime, sin toolkits de desarrollo)
FROM nvidia/cuda:12.1.1-runtime-ubuntu22.04

# Evita preguntas interactivas
ENV DEBIAN_FRONTEND=noninteractive

# Instala Python y dependencias básicas del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 \
    python3-pip \
    git \
    curl \
    wget \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Directorio de trabajo - apuntar a donde está api.py
WORKDIR /workspace

# Actualiza pip y herramientas base
RUN pip3 install --no-cache-dir --upgrade pip setuptools wheel

# Instala librerías necesarias del requirements.txt
COPY requirements.txt .
RUN pip3 install --no-cache-dir -r requirements.txt

# Instala PaddleOCR con soporte CPU (versión específica desde repositorio oficial)
RUN python -m pip install paddlepaddle==3.2.0 -i https://www.paddlepaddle.org.cn/packages/stable/cpu/ && \
    pip3 install --no-cache-dir "paddleocr[all]"

# Copia archivos de la aplicación
COPY app/ /workspace/app/

# Crea directorios comunes de trabajo si no existen
RUN mkdir -p /workspace/storage /workspace/uploads /workspace/outputs && \
    chmod -R 777 /workspace

# Expone puertos:
# 8000 → FastAPI (OCR API)
# 8888 → Jupyter (opcional, solo desarrollo)
EXPOSE 8000

# Variables de entorno
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/workspace:/workspace/app

# Comando por defecto: inicia FastAPI con Uvicorn desde directorio correcto
WORKDIR /workspace/app

CMD ["uvicorn", "api:app", "--host", "0.0.0.0", "--port", "8000"]
